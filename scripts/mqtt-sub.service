[Unit]
Description=MQTT Subscriber for SmartCities-SmartNest
After=mosquitto.service
Requires=mosquitto.service

[Service]
ExecStart=/usr/bin/python3 -u /home/user/smart_cities/smart-nest/rpi/mqtt_sub.py
Restart=always
User=user
WorkingDirectory=/home/user/smart_cities/smart-nest/rpi
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
