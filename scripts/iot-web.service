[Unit]
Description=WebApp for SmartCities-SmartNest
After=network.target

[Service]
WorkingDirectory=/home/user/smart_cities/smart-nest/web
ExecStart=/usr/bin/python3 -u /home/user/smart_cities/smart-nest/web/main.py
Restart=always
User=user
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target